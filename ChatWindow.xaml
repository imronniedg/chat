<Window x:Class="Chat.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat"
        mc:Ignorable="d"
        Title="ChatWindow" Height="468" Width="578">
    <Grid x:Name="chatWindow" Loaded="ChatWindowLoaded" Margin="0,0,10,0">
        <TextBox x:Name="messageField" HorizontalAlignment="Left" Margin="10,389,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="390" Height="35"/>
        <Button x:Name="sendMessageBtn" Content="Send" HorizontalAlignment="Left" Height="35" Margin="427,389,0,0" VerticalAlignment="Top" Width="119" Click="Button_Click"/>
        <ListBox x:Name="messageArea" HorizontalAlignment="Center" Height="374" Margin="0,10,0,0" VerticalAlignment="Top" Width="536" Unloaded="ChatWindowUnloaded"/>
    </Grid>
</Window>
